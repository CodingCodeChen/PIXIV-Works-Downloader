{
    //Required
    "manifest_version" : 2,
    "author" : "HP Chen",
    "name" : "PIXIV Works Downloader",
    "version" : "0.1",

    //Recommended
    "description" : "Downloaded the spacify artist's works on PIXIV",
    "icons" : {},

    "page_action" : {
        "default_title" : "Download all works",
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },

    "background" : { 
        "scripts" : ["eventPage.js"],
        "persistent" : false
    },
	
    "content_scripts" : [
        {
            "matches" : ["http://www.pixiv.net/*"],
            "css" : [ "extension.css" ],
            "js" : [ "jquery-2.1.1.min.js", "extension.js" ]
        }     
    ],
	
    "web_accessible_resources" : [
        "image/*" 
    ],
    "permissions": [ "declarativeContent" ]
}

